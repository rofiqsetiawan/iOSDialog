<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.karamunting.iOSDialogDemo.MainActivity"
    android:minWidth="25px"
    android:minHeight="25px">
    <Button
        android:text="Open Single Button iOSDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_single_btn" />
    <Button
        android:text="Open Double Button iOSDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_single_btn"
        android:id="@+id/btn_double_btn" />
</RelativeLayout>